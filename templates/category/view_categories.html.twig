{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}
{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <th scope="row">{{category.id}}</th>
                        <td>{{category.name}}</td>
                        <td><a href="{{path('edit_category', {'id': category.id})}}" class="btn btn-warning m-2">Edit</a></td>
                        <td><a href="{{path('delete_category', {'id': category.id})}}" class="btn btn-danger m-2">Delete</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-sm">
            <div class=" p-3 rounded shadow">
                <h3>Add Category</h3>
                {{ form_start(form)}}
                {{ form_row(form.name, {'attr': {'placeholder': "Category name"}}) }}
                <button type="submit" class="btn btn-success mt-3">Save</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}