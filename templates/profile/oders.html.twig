<main class="col-md-9">
    {% if purchases | length > 0 %}
    {% for purchase in purchases %}
    <article class="card mb-4 shadow">
        <header class="card-header">
            <a href="#" class="float-right"> <i class="fa fa-print"></i> Print</a>
            <strong class="d-inline-block mr-3">Order ID: {{purchase.id}}</strong>
            <span>Order Date:  {{purchase.purchasedAt | date('d/y/m') }}</span>
        </header>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h6 class="text-muted">Delivery to</h6>
                    <p>{{purchase.name}}<br>
                        Phone +12345678 Email: myname@gmail.com <br>
                        Location: {{purchase.address}}, {{purchase.city}}, {{purchase.postalcode}}<br>
                        P.O. Box: TODO
                    </p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">Payment</h6>
                    <span class="text-success">
                        <i class="fab fa-lg fa-cc-visa"></i>
                        Visa **** 4216
                    </span>
                    <p>Subtotal: {{purchase.total / 100}}€<br>
                        Shipping fee: 5€ <br>
                        <span class="b">Total: {{purchase.total / 100 + 5}}€ </span>
                    </p>
                </div>
            </div> <!-- row.// -->
        </div> <!-- card-body .// -->
        <div class="table-responsive">
            {% for product in purchase.purchaseItems %}
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td width="65">
                            <img src="{{product.productImage}}" class="img-xs border">
                        </td>
                        <td>
                            <p class="title mb-0">{{product.productName}}</p>
                            <var class="price text-muted">EURO {{product.productPrice / 100}}</var>
                        </td>
                        <td>Qty <br> {{product.quantity}}</td>
                        <td> Seller <br> TODO </td>
                        <td width="250"> <a href="#" class="btn btn-outline-primary">Track order</a>
                            <div class="dropdown d-inline-block">
                                <a href="#" data-toggle="dropdown"
                                    class="dropdown-toggle btn btn-outline-secondary">More</a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="#" class="dropdown-item">Return</a>
                                    <a href="#" class="dropdown-item">Cancel order</a>
                                </div>
                            </div> 
                        </td>
                    </tr>
                </tbody>
            </table>
            {% endfor %}
        </div> 
    </article>
    {% endfor %}
    {% else %}
    <h1 class="text-center text-primary p-3">YOU HAVE NO ODERS</h1>
    {% endif %}
</main>