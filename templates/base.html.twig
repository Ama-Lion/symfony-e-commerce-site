<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"> #}
        {# <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/> #}
       
         {# Bootstrap4 files #}
        <script src="{{asset('style/js/bootstrap.bundle.min.js')}}" type="text/javascript"></script>
        <link href="{{asset('style/css/bootstrap.css')}}" rel="stylesheet" type="text/css"/>

         {# Font awesome 5  #}
        <link href="{{asset('style/fonts/fontawesome/css/all.min.css')}}" type="text/css" rel="stylesheet">

        {# custom style  #}
        <link href="{{asset('style/css/ui.css')}}" rel="stylesheet" type="text/css"/>
        <link href="{{asset('style/css/responsive.css')}}" rel="stylesheet" />

        {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
           
            {# custom js #}
            <script src="{{asset('style/js/script.js')}}" type="text/javascript"></script>

             {# jQuery #}
            <script src="{{asset('style/js/jquery-2.0.0.min.js')}}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        {# header #}
        {% include "layouts/header.html.twig" %}

        {# symfony flashes bags #}
        <div class="container">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success tex">
                {{message}}
            </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{message}}
            </div>
            {% endfor %}
            {% for message in app.flashes('info') %}
            <div class="alert alert-warning">
                {{message}}
            </div>
            {% endfor %}
        </div>

        {# main body #}
       <div class="container"> {% block body %}{% endblock %}</div>

       {# footer #}
       {% include "layouts/footer.html.twig" %}
    </body>
</html>
