<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    
    {# Bootstrap4 files #}
    <link href="{{asset('assets/css/bootstrap.css')}}" rel="stylesheet" type="text/css" />

    {# Font awesome 5 #}
    <link href="{{asset('assets/fonts/fontawesome/css/all.min.css')}}" type="text/css" rel="stylesheet">

    {# custom style #}
    <link href="{{asset('assets/css/ui.css')}}" rel="stylesheet" type="text/css" />
    <link href="{{asset('assets/css/responsive.css')}}" rel="stylesheet" />

    {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}

    {% endblock %}
</head>

<body>
    {# header #}
    {% include "layouts/header.html.twig" %}

    {# symfony flashes bags #}
    <div class="contaner">
        {% for message in app.flashes('success') %}
        <div class="alert alert-success tex">
            {{message}}
        </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            {{message}}
        </div>
        {% endfor %}
        {% for message in app.flashes('info') %}
        <div class="alert alert-warning">
            {{message}}
        </div>
        {% endfor %}
    </div>

    {# main body #}
    <div class="container"> {% block body %}{% endblock %}</div>

    {# footer #}
    {% include "layouts/footer.html.twig" %}
    <script src="{{ asset('js/script.js') }}" type="text/javascript"></script>

    {# bootstrap inports #}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>