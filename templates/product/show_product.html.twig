{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{path('homepage')}}">Home</a></li>
      <li class="breadcrumb-item"><a href="{{path('products')}}">Products</a></li>
      <li class="breadcrumb-item"><a href="{{path('product_category', {'slug': product.category.slug})}}">{{product.category.name}}</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{product.name}}</li>
    </ol>
  </nav>
<div class="d-flex">
    {% if is_granted('CAN_EDIT', product) %}
        <a href="{{path('edit_product', {'id': product.id})}}" class="btn btn-warning m-2">Edit</a>
        <a href="{{path('delete_product', {'id': product.id})}}" class="btn btn-danger m-2">Delete</a>
    {% endif %}
</div>
<div class="row mt-5 d-flex  justify-content-center rounded shadow ">
    <div class="col-4  p-2">
        <img class="img-fluid rounded shadow" src="{{product.picture}}" alt="{{product.picture}}">
    </div>
    <div class="col-5 mr-3 p-2 d-flex flex-column justify-content-center ">
        <h3>{{product.name}}</h3>
        <span class="bg-info p-1 rounded w-50">{{product.category.name}}</span>
        <p>{{product.price / 100}}â‚¬</p>
        <p>{{product.description}}</p>
        <button class="btn btn-outline-success btn-lg">
            Add to cart
            <i class="fas fa-shopping-cart"></i>
        </button>
    </div>
</div>
{% endblock %}